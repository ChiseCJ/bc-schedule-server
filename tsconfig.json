{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "removeComments": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./"
  },
  "include": [
    "lib",
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
